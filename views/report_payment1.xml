<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_account_payment1">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="article">
                    <div class="page">

                       <div style="font-size: 95%; position: absolute; top: 2.6cm; left: 4cm">
                            GUATEMALA, <span t-esc="fecha_larga(o.date)"/>
                        </div>
                        <div style="font-size: 95%; position: absolute; top: 2.6cm; left: 18.2cm; font-weight: bold">
                            ***<span t-esc="'{0:,.2f}'.format(o.amount)"/>***
                        </div>
                        <div style="font-size: 95%; position: absolute; top: 3.5cm; left: 4.5cm; width: 18.5cm">
                            <span t-esc="o.nombre_impreso or o.partner_id.name"/>
                        </div>
                        <div style="font-weight: bold; font-size: 95%; text-transform: uppercase; position: absolute; top: 4.3cm; left: 3.3cm; width: 20cm">
                            <span t-esc="a_letras(o.amount)"/>
                        </div>
                        <div t-if="o.no_negociable == True" style="font-size: 100%; position: absolute; top: 6.2cm; left: 1.5cm">
                            <span>NO  NEGOCIABLE</span>
                        </div>
                        <div style="font-size: 95%; position: absolute; top: 10.5cm; left: 1cm; width: 15cm">
                        <span t-field="o.descripcion"/>
                        </div>
                       
                        <div style="position: absolute; top: 12cm; left: 1cm; font-weight: bold">
                            <table>
                                <tbody>
                                        <tr t-foreach="o.move_id.line_ids" t-as="l">
                                        <td style="width: 2.5cm">
                                            <span t-field="l.account_id.code"/>
                                        </td>
                                        <td style="width: 0.5cm">
                                        </td>
                                        <td style="width: 11cm">
                                            <span t-field="l.account_id.name"/>
                                        </td>
                                        
                                        <td style="width: 3.5cm" class="text-end">
                                            <span t-field="l.debit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                        <td style="width: 0.5cm">
                                        </td>
                                        <td style="width: 3cm" class="text-end">
                                            <span t-field="l.credit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div style="position: absolute; top: 20cm; left: 15.6cm; font-weight: bold">
                            <table>
                                <tbody>
                                    <tr>
                                        <td style="width: 3.5cm" class="text-end">
                                            <span t-esc="totales(o)['debito']" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                        <td style="width: 0.5cm">
                                        </td>
                                        <td style="width: 3cm" class="text-end">
                                            <span t-esc="totales(o)['credito']" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div style="position: absolute; top: 21cm; left: 1cm">
                            <table class="table table-sm table-borderless">
                                <tbody>
                                    <tr>
                                        <td style="width: 0cm">
                                            <span t-field="user.name"/>
                                        </td>
                                        <td style="width: 1">
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>

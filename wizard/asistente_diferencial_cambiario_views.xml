<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="asistente_diferencial_cambiario" model="ir.ui.view">
        <field name="name">texpasa.asistente_diferencial_cambiario</field>
        <field name="model">texpasa.asistente_diferencial_cambiario</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Seleccione Compañía">
                <group>
                    <group>
                        <field name="company_id"/>
                    </group>
                </group>
                <footer>
                    <button name="generar_diferencial" string="Generar" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="window_asistente_diferencial_cambiario" model="ir.actions.act_window">
        <field name="name">Generar Diferencial Cambiario</field>
        <field name="res_model">texpasa.asistente_diferencial_cambiario</field>
        <field name="view_mode">form</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="target">new</field>
    </record>

</odoo>
